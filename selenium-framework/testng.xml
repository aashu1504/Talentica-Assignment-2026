<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Automation Test Suite" parallel="methods" thread-count="1">
    <listeners>
        <listener class-name="com.qa.automation.listeners.TestStatusListener"/>
    </listeners>
    
           <test name="Home Page Tests">
               <classes>
                   <class name="com.qa.automation.tests.homepage.TC001_HomePageTest"/>
               </classes>
           </test>
           
           <test name="Signup Tests">
               <classes>
                   <class name="com.qa.automation.tests.signup.TC002_PatientSignupTest"/>
                   <class name="com.qa.automation.tests.signup.TC003_DoctorSignupTest"/>
               </classes>
           </test>
           
           <test name="Search Tests">
               <classes>
                   <class name="com.qa.automation.tests.search.TC007_FindDoctorsSearchTest"/>
               </classes>
           </test>
           
           <test name="Login Tests">
               <classes>
                   <class name="com.qa.automation.tests.login.TC004_PatientLoginTest"/>
                   <class name="com.qa.automation.tests.login.TC005_DoctorLoginTest"/>
               </classes>
           </test>
           
           <test name="Profile Tests">
               <classes>
                   <class name="com.qa.automation.tests.profile.TC006_DoctorEditProfileTest"/>
                   <class name="com.qa.automation.tests.profile.TC019_EditPatientProfileTest"/>
                   <class name="com.qa.automation.tests.profile.TC020_EditDoctorProfessionalInfoTest"/>
               </classes>
           </test>
           
           <test name="Medical Records Tests">
               <classes>
                   <class name="com.qa.automation.tests.records.TC018_UploadMedicalReportTest"/>
               </classes>
           </test>
           
           <test name="Security Tests">
               <classes>
                   <class name="com.qa.automation.tests.security.TC021_ChangePasswordTest"/>
                   <class name="com.qa.automation.tests.security.TC024_PatientCannotAccessDoctorURLTest"/>
                   <class name="com.qa.automation.tests.security.TC025_SessionTimeoutBrowserBackTest"/>
               </classes>
           </test>
           
           <test name="Logout Tests">
               <classes>
                   <class name="com.qa.automation.tests.logout.TC022_PatientLogoutTest"/>
                   <class name="com.qa.automation.tests.logout.TC023_DoctorLogoutTest"/>
               </classes>
           </test>
           
           <test name="Performance Tests">
               <classes>
                   <class name="com.qa.automation.tests.performance.TC026_HomePageLoadSpeedTest"/>
               </classes>
           </test>
</suite>

